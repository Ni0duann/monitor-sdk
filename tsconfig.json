{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
      "baseUrl": ".", // 指定基础目录，这里表示项目根目录
        "paths": {
          "@/*": ["src/*"], 
        }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/__tests__/*"]
}